<?xml version="1.0"?>
<!--
/**
 *
 * @category    Koin
 * @package     Koin_Payment
 */
 -->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Koin_Payment::css/checkout.css" />
        <script src="Koin_Payment::js/payments.js" />
    </head>
    <body>
        <referenceContainer name="order.success.additional.info">
            <block class="Koin\Payment\Block\Checkout\Success"
                   name="koin.payment.success"
                   template="Koin_Payment::checkout/success.phtml"
                   cacheable="false"
                   ifconfig="koin/general/show_payment_info"
            />
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template"
                   name="koin.success.additional"
                   template="Koin_Payment::checkout/success/additional.phtml"
                   ifconfig="koin/general/account_number"
            >
                <arguments>
                    <argument name="view_model" xsi:type="object">Koin\Payment\ViewModel\Checkout\Success\Additional</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Template"
                   name="koin.success.antifraud.strategy"
                   template="Koin_Payment::checkout/success/antifraud-strategy.phtml"
                   ifconfig="koin/fraud_analysis/active_strategy">
                <arguments>
                    <argument name="view_model" xsi:type="object">Koin\Payment\ViewModel\Checkout\Success\AntifraudStrategy</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
