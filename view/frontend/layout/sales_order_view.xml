<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Koin_Payment::css/checkout.css" />
        <script src="Koin_Payment::js/payments.js" />
    </head>
    <body>
        <referenceContainer name="order_totals">
            <block class="Koin\Payment\Block\Sales\Order\Totals\Interest" name="koinpayment_interest">
                <action method="setBeforeCondition">
                    <argument name="condition" xsi:type="string">shipping</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template"
                   name="koin.success.antifraud.strategy"
                   template="Koin_Payment::checkout/success/antifraud-strategy.phtml"
                   ifconfig="koin/fraud_analysis/active_strategy">
                <arguments>
                    <argument name="view_model" xsi:type="object">Koin\Payment\ViewModel\Checkout\Success\AntifraudStrategy</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
